<!-- individual event template -->

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <% include head %>
    <link rel="stylesheet" href="/stylesheets/eventX.css"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css"/>

</head>
<body>

<header>
    <% include nav %>
</header>




<div class="row">
    <form>
        <input type="hidden" name="eventID" value="<%=event._id%>"/>
    </form>
    <div class="cardX card">
        <div class="wrapper" style="background:url('/img/<%= event.id %>');background-size:cover">
            <div class="header">
                <div class="date">

                    <span class="createdDate"><%= event.created%></span>
                </div>
                <ul class="menu-content">
                    <li>
                        <a href="#" class="fa fa-bookmark-o"></a>
                    </li>
                    <li><a href="#" class="fa fa-heart-o"><span>130</span></a></li>
                    <li><a href="#" class="fa fa-comment-o"><span>13</span></a></li>
                </ul>
            </div>
            <div class="data">
                <div class="content">
                    <span class="author">Lorem Ipsum</span>
                    <h1 class="title"><a href="#"><%= event.title %></a></h1>
                    <p class="text"><%= event.description %></p>
                    <a href="#" class="button">Find out more</a>
                </div>
            </div>
        </div>
    </div>
</div>














<footer>
    <% include footer %>
</footer>

</body>
</html>

